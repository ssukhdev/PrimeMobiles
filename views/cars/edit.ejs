<% include ../partials/header %>
	<div class-"row">
	
	<h1 style="text-align: center;">Edit <%= car.name %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/cars/<%= car._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="car[name]" value="<%= car.name %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="car[price]" value="<%= car.price %>" min="9999" step="1" required>
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="car[image]" value="<%= car.image %>" required>	
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="car[description]" value="<%= car.description %>" required>	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>			
			</form>
			<a href="/cars">Back</a>
		</div>
	</div>	


<% include ../partials/footer %>