<% include ../partials/header %>
<div class-"row">	
	<h1 style="text-align: center;">Add a New Car</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/cars" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="Price" min="9999" step="1" required>
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="image" placeholder="Image url" required>	
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="description" placeholder="Description" required>	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>			
			</form>
			<a href="/cars">Back</a>
		</div>
	</div>	


<% include ../partials/footer %>